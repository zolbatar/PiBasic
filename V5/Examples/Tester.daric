REM Check Forward FN/PROC calls
Type VertexTest(x,y,z,rgb%)

DEF LocalVars()
	Local G% = 10
ENDDEF

DEF TestTypes()
	Local A! = VertexTest
	A!x = 50.0
 	A!y = 100.5
 	A!rgb% = &FF2080
 	PRINT "Load field (float) = ";: IF A!y = 100.5 THEN Pass() ELSE Fail()
	PRINT "Load field (int)   = ";: IF A!rgb% = &FF2080 THEN Pass() ELSE Fail()
	DIM B!(5, VertexTest)
 	B!(4)y = 100.0
 	PRINT "Load field (array) = ";: IF B!(4)y = 100.0 THEN Pass() ELSE Fail()
ENDDEF

PROC Test()
	PROCPass()
	Return
	PRINT "FAIL"
ENDPROC

FN TestRet(RETURN a%, RETURN b%)
	a%=100
	b%=200
ENDFN

FN TestReturn%(x%, y) 
	RETURN Int(x% + y + 5)
ENDFN

FN TestReturn(x%, y) 
	RETURN x% + y + 5.0
ENDFN

PROC TestLocalVariables()
	Local DIM C%(5)
	FOR LOCAL J% = 0 TO 4
		Read C%(J%)
	NEXT
	PRINT "Func Local (Array) = ";:IF C%(0) + C%(1) + C%(2) + C%(3) + C%(4) = 15 THEN Pass() ELSE Fail()
ENDPROC

PROC Fail()
	COLOUR RED
	PRINT  "!! FAILED TEST !!"
	END
ENDPROC

PROC Pass():COLOUR GREEN:PRINT "PASS":COLOUR WHITE:ENDPROC