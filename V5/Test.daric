w%=SCREENWIDTH,h%=SCREENHEIGHT,sw%=50,sh%=50,sprites%=100
T%=TIME
GRAPHICS BANKED
CURSOROFF
c%=CREATESPRITE(sw%,sh%,1)
bg%=LOADSPRITE("Background.png")
DRAWTOSPRITE c%,0,0,0:PROCCircle():DRAWTOSCREEN
DIM sx%(sprites%),sy%(sprites%),sdx%(sprites%),sdy%(sprites%)
FOR I%=0 TO sprites%-1:sx%(I%)=RND(w%):sy%(I%)=RND(h%):sdx%(I%)=1:sdy%(I%)=1:NEXT
REM CLIPON 200,200,w%-200,h%-200
FOR loop%=0 TO 1000
    CLS
    FOR I%=0 TO sprites%-1
        DRAWSPRITE c%,0,sx%(I%),sy%(I%)

        REM Move
        sx%(I%)=sx%(I%)+sdx%(I%)
        sy%(I%)=sy%(I%)+sdy%(I%)

        REM Check whether at edge
        IF sx%(I%)<0 sdx%(I%)=1
        IF sx%(I%)>w%-sw%-1 sdx%(I%)=-1
        IF sy%(I%)<0 sdy%(I%)=1
        IF sy%(I%)>h%-sh%-1 sdy%(I%)=-1
    NEXT
    FLIP
NEXT
CLIPOFF
GRAPHICS
PRINT TIME-T%
DELETESPRITE c%:CURSORON
DEF PROCCircle():COLOUR BLUE:CIRCLE FILL sw%/2,sw%/2,sw%/2-5:ENDPROC
