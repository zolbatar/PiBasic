w%=SCREENWIDTH,h%=SCREENHEIGHT:wq%=w%/4:hq%=h%/4
CLS
tiles%=CREATESPRITE(wq%,hq%,16)
I%=0
FOR Y%=0 TO 3
	FOR X%=0 TO 3
		RENDERTOSPRITE tiles%,I%,wq%*X%,hq%*Y%:PROCTriangle()
		I%+=1
	NEXT
NEXT
RENDERTOSCREEN
INKEY(1000)
DELETESPRITE tiles%

DEF PROCTriangle():TRIANGLE SHADED w%/2,25,&FF0000,w%-25,h%-25,&FF00,25,h%-25,&FF:ENDPROC
