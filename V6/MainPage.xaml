<Page
    x:Class="DARIC.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DARIC"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="#FF202020">
    <StackPanel>
        <CommandBar HorizontalAlignment="Center">
            <CommandBar.Content>
                <TextBlock Text="No DARIC file" Margin="12,10"/>
            </CommandBar.Content>
            <AppBarToggleButton x:Name="toggleFullScreen" Label="Full Screen" IsChecked="{x:Bind IsFullScreen}" Icon="FullScreen" Checked="toggleFullScreen_Checked" Unchecked="toggleFullScreen_Unchecked" />
            <AppBarButton Icon="Play" Label="Run" />
            <AppBarButton Icon="Delete" Label="New" />
            <AppBarButton Icon="OpenLocal" Label="Load" />
            <AppBarButton Icon="SaveLocal" Label="Save" />
            <AppBarButton x:Name="buttonQuit" Icon="Cancel" Label="Quit" Click="buttonQuit_Click"  />
        </CommandBar>
        <canvas:CanvasSwapChainPanel x:Name="canvas"/>
    </StackPanel>
</Page>
