DEFPROCInitPerlin()
	DIM hash%(256)
	FOR I%=0 TO 255
		READ hash%(I%)
	NEXT
	seed%=0
ENDPROC

DEFFNNoise2D%(x%, y%)
	LOCAL tmp%=hash%((y% + seed%) MOD 256)
	RETURN hash%((tmp% + x%) MOD 256)
ENDFN

DEFFNLinInter(x, y, s)		RETURN x + s * (y - x) ENDFN
DEFFNSmoothInter(x, y, s)	RETURN FNLinInter(x, y, s * s * (3 - 2*s)) ENDFN

DEFFNNoise2D(x, y)
	LOCAL x_int% = x
	LOCAL y_int% = y
	LOCAL x_frac = x - x_int%
	LOCAL y_frac = y - y_int%
	LOCAL s%=FNNoise2D%(x_int%,     y_int%)
	LOCAL t%=FNNoise2D%(x_int% + 1, y_int%)
	LOCAL u%=FNNoise2D%(x_int%,     y_int% + 1)
	LOCAL v%=FNNoise2D%(x_int% + 1, y_int% + 1)
	LOCAL low=FNSmoothInter(s%, t%, x_frac)
	LOCAL high=FNSmoothInter(u%, v%, x_frac)
	RETURN FNSmoothInter(low, high, y_frac)
ENDFN
  
DEFFNPerlin2D(x, y, freq, depth%)
	LOCAL xa=x * freq
	LOCAL ya=y * freq
	LOCAL amp=1.0
	LOCAL fin=0.0
	LOCAL di=0.0
	FOR I%=0 TO depth% - 1
		di = di + (256 * amp)
		fin = fin + (FNNoise2D(xa, ya) * amp)
		amp = amp / 2
		xa = xa * 2
		ya = ya * 2
	NEXT
	RETURN fin / di
ENDFN

